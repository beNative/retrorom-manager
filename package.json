{
  "name": "retro-rom-manager",
  "version": "1.0.0",
  "main": "dist-electron/electron/main.js",
  "author": "Retro Enthusiast",
  "description": "A cross-platform tool to scan, clean, and manage EmulationStation ROM collections and media.",
  "scripts": {
    "dev": "vite",
    "build": "tsc -p electron/tsconfig.json && vite build",
    "electron:dev": "tsc -p electron/tsconfig.json && electron .",
    "electron:build": "tsc -p electron/tsconfig.json && vite build && electron-builder",
    "electron:build:win": "rimraf dist-electron release && tsc -p electron/tsconfig.json && vite build && electron-builder --win",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "fast-xml-parser": "^4.3.2",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "remark-gfm": "^4.0.0",
    "tailwind-merge": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "rimraf": "^5.0.10",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.retro-rom-manager.app",
    "productName": "RetroRom Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "docs/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Utility"
    },
    "mac": {
      "target": "dmg"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
